<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/dialog_empty_chat_back"
    android:orientation="vertical"
    android:layout_width="200dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text"
        android:gravity="center"
        android:textSize="16sp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="15dp"
        android:textColor="@color/color_000000_0.5"
        android:text="确定清空聊天记录？"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>

    <View
        android:id="@+id/view1"
        android:layout_marginTop="15dp"
        android:background="@color/color_cccccc"
        android:layout_height="0.3dp"
        android:layout_width="match_parent"/>

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:background="@drawable/setup_line_background"
            android:id="@+id/cancel_tv"
            android:text="取消"
            android:gravity="center"
            android:textColor="@color/color_ee157cf8"
            android:textSize="14sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>

        <View
            android:id="@+id/view2"
            android:background="@color/color_cccccc"
            android:layout_width="0.3dp"
            android:layout_height="match_parent"/>

        <TextView
            android:background="@drawable/setup_line_background"
            android:id="@+id/delet_tv"
            android:text="删除"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:textSize="14sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>

    </LinearLayout>

</LinearLayout>
